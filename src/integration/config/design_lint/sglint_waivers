# W287a: Some inputs to instance are not driven or unconnected
waive_lint -tag W287a -add waive_caliptra_top_W287a -filter "FileName =~ caliptra_top*.sv"

# W494: Inout port is not used
waive_lint -tag W494 -add waive_caliptra_top_W494 -filter "FileName =~ caliptra_top*.sv"

# CombLoop: Detects combinational loops
#waive_lint -tag CombLoop -add waive_caliptra_top_CombLoop -filter "FileName =~ caliptra_top.sv"
# filter filename is excluded as CombLoop generates a summary file which gets flagged as error even when the error itself has been waived
waive_lint -tag CombLoop -add waive_caliptra_top_CombLoop 

# UndrivenInTerm-ML: Detects undriven but loaded input terminal of an instance
waive_lint -tag UndrivenInTerm-ML -add waive_caliptra_top_UndrivenInTerm-ML -filter "FileName =~ caliptra_top*.sv"

# UnloadedOutTerm-ML: Unloaded but driven output terminal of an instance detected
waive_lint -tag UnloadedOutTerm-ML -add waive_caliptra_top_UnloadedOutTerm-ML -filter "FileName =~ caliptra_top*.sv"

# UndrivenOutPort-ML: Undriven but loaded output port of a module detected
waive_lint -tag UndrivenOutPort-ML -add waive_caliptra_top_UndrivenOutPort-ML -filter "FileName =~ caliptra_top*.sv"

